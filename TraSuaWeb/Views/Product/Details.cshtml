@model TraSuaWeb.Models.SanPham
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SanPham> lssanpham = ViewBag.Sanpham;
}
<!-- Begin Main Content Area  -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/User/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">@Model.TenSp</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>@Model.TenSp</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="single-product-area section-space-top-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="single-product-img">
                        <div class="swiper-slide">
                            <a href="~/images/@Model.AnhSp" class="single-img gallery-popup">
                                <img class="img-full" src="~/images/@Model.AnhSp" alt="Product Image">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 pt-9 pt-lg-0">
                    <div class="single-product-content">
                        <h2 class="title">@Model.TenSp</h2>
                        <div class="price-box pb-1">
                            <span class="new-price text-danger">@Model.Gia.Value.ToString("#,##0") VND</span>
                            @*<span class="old-price text-primary">$90.00</span>*@
                        </div>

                        <div class="rating-box-wrap pb-7">
                            <div class="rating-box">
                                <ul>
                                    <li><i class="pe-7s-star"></i></li>
                                    <li><i class="pe-7s-star"></i></li>
                                    <li><i class="pe-7s-star"></i></li>
                                    <li><i class="pe-7s-star"></i></li>
                                    <li><i class="pe-7s-star"></i></li>
                                </ul>
                            </div>
                            <div class="review-status ps-4">
                                <a href="javascript:void(0)">( 1 Customer Review )</a>
                            </div>
                        </div>
                        <div class="selector-wrap color-option pb-2">
                            <span>SIZE</span>
                            <select class="nice-select wide rounded-0">
                                <option href="/@Model.MaSizeNavigation.LoaiSize">@Model.MaSizeNavigation.LoaiSize</option>
                            </select>
                        </div>
                        <ul class="quantity-with-btn pb-7">
                            <li class="quantity">
                                <div class="cart-plus-minus">
                                    <input id="txtsoluong" name="txtsoluong" class="cart-plus-minus-box" value="1" type="text">
                                </div>
                            </li>
                            <li class="add-to-cart">
                                <a class="btn btn-custom-size lg-size btn-primary btn-secondary-hover rounded-0" href="javascrip:void(0)">Add to cart</a>
                                <input hidden asp-for="MaSp" />
                            </li>
                            <li class="wishlist-btn-wrap">
                                <a class="btn rounded-0" href="wishlist.html">
                                    <i class="pe-7s-like"></i>
                                </a>
                            </li>
                        </ul>
                        <div class="product-category text-matterhorn pb-2">
                            <span class="title">Categories :</span>
                            <ul>
                                <li>
                                    <a href="/@Model.MaLoai.Trim()">@Model.MaLoaiNavigation.TenLoai</a>
                                </li>
                            </ul>
                        </div>
                        <div class="social-link align-items-center">
                            <span class="title pe-3">Share:</span>
                            <ul>
                                <li>
                                    <div class="fb-like" data-href="https://bom.to/Uq7yN9" data-width="" data-layout="button_count" data-action="like" data-size="small" data-share="true"></div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="product-tab-area section-space-top-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="nav product-tab-nav product-tab-style-2" role="tablist">
                        <li class="nav-item" role="presentation">
                            <div class="fb-comments" data-href="https://www.facebook.com/search/top?q=tr%C3%A0%20s%E1%BB%AFa%20technology" data-width="" data-numposts="5"></div>
                        </li>
                    </ul>              
                </div>
            </div>
        </div>
    </div>
    <div class="product-slider-area section-space-top-95 section-space-bottom-100">
        <div class="container">
            <div class="section-title text-center pb-55">
                <span class="sub-title text-primary">Có thể bạn cũng thích</span>
                <h2 class="title mb-0">Sản phẩm tương tự</h2>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="swiper-slider-holder swiper-arrow">
                        <div class="swiper-container product-slider border-issue">
                            <div class="swiper-wrapper">
                                @if (lssanpham != null)
                                {
                                    foreach (var item in lssanpham)

                                    {
                                        string url = $"/{item.TenSp}-{item.MaSp}.html";
                                        <div class="swiper-slide">
                                            <div class="product-item">
                                                <div class="product-img img-zoom-effect">
                                                    <a href="@url">
                                                        <img class="img-full" src="~/images/@item.AnhSp" alt="@item.TenSp">
                                                    </a>
                                                    <div class="product-add-action">
                                                        <ul>
                                                            <li>
                                                                <a href="cart.html">
                                                                    <i class="pe-7s-cart"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="compare.html">
                                                                    <i class="pe-7s-shuffle"></i>
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <a href="wishlist.html">
                                                                    <i class="pe-7s-like"></i>
                                                                </a>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="product-content texx">
                                                    <a class="product-name" href="@url">@item.TenSp</a>
                                                    <div class="price-box pb-1">
                                                        <span class="new-price">@item.Gia.Value.ToString("#,##0") VND</span>
                                                    </div>
                                                    <div class="rating-box">
                                                        <ul>
                                                            <li><i class="pe-7s-star"></i></li>
                                                            <li><i class="pe-7s-star"></i></li>
                                                            <li><i class="pe-7s-star"></i></li>
                                                            <li><i class="pe-7s-star"></i></li>
                                                            <li><i class="pe-7s-star"></i></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                        <!-- Add Arrows -->
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                        <div class="offcanvas-minicart_wrapper" id="miniCart">
                            @*@await Component.InvokeAsync("HeaderCart")*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts{
    <script src="~/User/assets/js/cart/giohangt.js"></script>
}