@model List<TraSuaWeb.ModelView.GiohangViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="~/User/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Giỏ Hàng</h2>
                        <ul>
                            <li>
                                <a href="/">Trang chủ <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Giỏ hàng</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="cart-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <form action="javascript:void(0)">
                        <div class="table-content table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="product_remove">Xóa sản phẩm</th>
                                        <th class="product-thumbnail">Anh sản phẩm</th>
                                        <th class="cart-product-name">Sản phẩm</th>
                                        <th class="product-price">Đơn giá</th>
                                        <th class="product-quantity">Số lượng</th>
                                        <th class="product-subtotal">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null && Model.Count() > 0)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="product_remove">
                                                    <a href="javascript:void(0)">
                                                        <input type="button" value="X" class="removecart btn btn-primary" data-mahh="@item.sanpham.MaSp" />
                                                    </a>
                                                </td>
                                                <td class="product-thumbnail">
                                                    <a href="javascript:void(0)">
                                                        <img src="~/images/@item.sanpham.AnhSp  " alt="@item.sanpham.TenSp" style="width:85px;height:70px;border:0;">

                                                    </a>
                                                </td>
                                                <td class="product-name"><a href="javascript:void(0)">@item.sanpham.TenSp</a></td>
                                                <td class="product-price"><span class="amount">@item.sanpham.Gia.Value.ToString("#,##0") VND</span></td>
                                                <td class="quantity">
                                                    <div class="cart-plus-minus">
                                                        <input data-mahh="@item.sanpham.MaSp" data-dongia="@item.sanpham.MaSp" class="cartItem cart-plus-minus-box" value="@item.Soluong" min="1" type="button">
                                                    </div>
                                                </td>
                                                <td class="product-subtotal"><span class="amount">@item.Tongtien.ToString("#,##0") VND</span></td>

                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-md-5 ml-auto">
                                <div class="cart-page-total">
                                    <h2>Tổng đơn hàng</h2>
                                    <ul>
                                        <li>Thành tiền<span>@Model.Sum(x => x.Tongtien).ToString("#,##0") VND</span></li>
                                        @*
                                            <li>Total <span>$118.60</span></li>*@
                                    </ul>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a href="/checkout.html" class="btn btn-secondary btn-primary-hover">Thanh Toán</a>
                                    }
                                    else
                                    {
                                        <a href="dang-nhap.html?returnUrl=/checkout.html" class="btn btn-secondary btn-primary-hover">Thanh Toán</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts{
    <script src="~/User/assets/js/cart/giohangt.js"></script>
}
