 @model TraSuaWeb.ModelView.HomeVM

@{ ViewData["Title"] = "Home Page";
    List<SanPham> allProduct = ViewBag.AllProduct;
}

<!-- Begin Slider Area -->
<div class="slider-area">

    <!-- Main Slider -->
    <div class="swiper-container main-slider swiper-arrow with-bg_white">
        <div class="swiper-wrapper">
            <div class="swiper-slide animation-style-01">
                <div class="slide-inner bg-height" data-bg-image="/images/logo/anhpanner/202.jpg">
                    <div class="parallax-img-wrap">
                        <div class="chilly">
                            <div class="scene fill">
                                <div class="expand-width" data-depth="0.2">
                                    <img src="~/images/logo/anhpanner/5-removebg-preview.png" alt="Inner Image">
                                </div>
                            </div>
                        </div>
                        <div class="avocado">
                            <div class="scene fill">
                                <div class="expand-width" data-depth="0.5">
                                    <img src="~/images/logo/anhpanner/11.png" alt="Inner Image">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="parallax-with-content">
                            <div class="slide-content">
                                <span class="sub-title mb-3">Rẻ mà chất lượng</span>
                                <h2 class="title mb-9">-40% Giảm Giá Các Loại Trà Sữa</h2>
                                <div class="button-wrap">
                                    <a class="btn btn-custom-size lg-size btn-primary btn-white-hover rounded-0" href="shop.html">Đến gian hàng</a>
                                </div>
                            </div>
                            <div class="parallax-img-wrap">
                                <div class="tomatoes">
                                    <div class="scene fill">
                                        <div class="expand-width" data-depth="0.5">
                                            <img src="~/images/logo/anhpanner/01.png" alt="Inner Image">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="swiper-slide animation-style-01">
                <div class="slide-inner bg-height" data-bg-image="/images/logo/anhpanner/202.jpg">
                    <div class="parallax-img-wrap">
                        <div class="chilly">
                            <div class="scene fill">
                                <div class="expand-width" data-depth="0.2">
                                    <img src="~/images/logo/anhpanner/11.png" alt="Inner Image">
                                </div>
                            </div>
                        </div>
                        <div class="avocado">
                            <div class="scene fill">
                                <div class="expand-width" data-depth="0.5">
                                    <img src="~/images/logo/anhpanner/5-removebg-preview.png" alt="Inner Image">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="parallax-with-content">
                            <div class="slide-content">
                                <span class="sub-title mb-3">Rẻ mà chất lượng</span>
                                <h2 class="title mb-9">-40% Giảm Giá Các Loại Trà Sữa</h2>
                                <div class="button-wrap">
                                    <a class="btn btn-custom-size lg-size btn-primary btn-white-hover rounded-0" href="shop.html">Đến gian hàng</a>
                                </div>
                            </div>
                            <div class="parallax-img-wrap">
                                <div class="tomatoes">
                                    <div class="scene fill">
                                        <div class="expand-width" data-depth="0.5">
                                            <img src="~/images/logo/anhpanner/10-removebg-preview.png" alt="Inner Image">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination with-bg d-md-none"></div>

        <!-- Add Arrows -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>

</div>
<!-- Slider Area End Here -->
<!-- Begin Shipping Area -->
<div class="shipping-area section-space-top-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="shipping-item">
                    <div class="shipping-img">
                        <img src="~/User/assets/images/shipping/icon/plane.png" alt="Shipping Icon">
                    </div>
                    <div class="shipping-content">
                        <h5 class="title">Miễn Phí Vận Chuyển</h5>
                        <p class="short-desc mb-0">Miễn phí vận chuyển khi đặt online</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 pt-6 pt-md-0">
                <div class="shipping-item">
                    <div class="shipping-img">
                        <img src="~/User/assets/images/shipping/icon/earphones.png" alt="Shipping Icon">
                    </div>
                    <div class="shipping-content">
                        <h5 class="title">Điện Thoại Hỗ Trợ</h5>
                        <p class="short-desc mb-0">24/7 Khi có vấn đề cần khiếu nại</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 pt-6 pt-lg-0">
                <div class="shipping-item">
                    <div class="shipping-img">
                        <img src="~/User/assets/images/shipping/icon/shield.png" alt="Shipping Icon">
                    </div>
                    <div class="shipping-content">
                        <h5 class="title">Bảo mật thông tin</h5>
                        <p class="short-desc mb-0">Bảo mật thông tin người dùng cao</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Shipping Area End Here -->
<!-- Begin Product Area -->
<div class="product-area section-space-top-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="nav product-tab-nav pb-10" id="myTab" role="tablist">
                    <li class="nav-item" role="pronesentati">
                        <a class="active" id="all-items-tab" data-bs-toggle="tab" href="#all-items" role="tab" aria-controls="all-items" aria-selected="true">
                            <div class="product-tab-icon">
                                <img src="~/User/assets/images/product/icon/1.png" alt="Product Icon">
                            </div>
                            All Items
                        </a>
                    </li>
                    @foreach (var item in Model.sanphams)
                    {
                        <li class="nav-item" role="presentation">
                            <a id="all-items-tab" data-bs-toggle="tab" href="#@item.loaisanpham.MaLoai.Trim()" role="tab" aria-controls="all-items" aria-selected="true">
                                <div class="product-tab-icon">
                                    <img src="~/images/Anhloaisp/@item.loaisanpham.Anh" alt="@item.loaisanpham.TenLoai.">
                                </div>
                                @item.loaisanpham.TenLoai
                            </a>
                        </li>
                    }
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="all-items" role="tabpanel" aria-labelledby="all-items-tab">
                        @await Html.PartialAsync("_listProductPatialView", allProduct)
                    </div>
                    @foreach (var item in Model.sanphams)
                    {
                        <div class="tab-pane fade" id="@item.loaisanpham.MaLoai.Trim()" role="tabpanel" aria-labelledby="fresh-fruits-tab">
                            @await Html.PartialAsync("_listProductPatialView", item.lssanpham)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Product Area End Here -->
<!-- Begin Banner Area -->
<div class="banner-area section-space-top-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="banner-item">
                    <div class="banner-img img-zoom-effect">
                        <img class="img-full" src="~/images/logo/anhpanner/17.jpg"alt="Banner Image">
                        <div class="inner-content">
                            <h5 class="offer">Giảm 10%</h5>
                            <h4 class="title mb-5">Bánh kem<br></h4>
                            <div class="button-wrap">
                                <a class="btn btn-primary btn-white-hover rounded-0" href="shop.html">Đến gian hàng</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 pt-6 pt-md-0">
                <div class="banner-item">
                    <div class="banner-img img-zoom-effect">
                        <img class="img-full" src="~/images/logo/anhpanner/18.png" alt="Banner Image">
                        <div class="inner-content">
                            <h5 class="offer">-20% Giảm</h5>
                            <h4 class="title mb-5">Các loại trà sữa<br></h4>
                            <div class="button-wrap">
                                <a class="btn btn-primary btn-white-hover rounded-0" href="shop.html">Đến gian hàng</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 pt-6 pt-lg-0">
                <div class="banner-item">
                    <div class="banner-img img-zoom-effect">
                        <img class="img-full" src="~/images/logo/anhpanner/19.png" alt="Banner Image">
                        <div class="inner-content">
                            <h5 class="offer">-30% Giảm</h5>
                            <h4 class="title mb-5">Mang Về<br></h4>
                            <div class="button-wrap">
                                <a class="btn btn-primary btn-white-hover rounded-0" href="shop.html">Đến gian hàng</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End Here -->
<!-- Begin Product Area -->
<!-- Product Area End Here -->
<!-- Begin Blog Area -->
@if (Model.tintucs != null && Model.tintucs.Count > 0)
{
    <div class="blog-area section-space-y-axis-100">
        <div class="container">
            <div class="section-title text-center pb-55">
                <h2 class="title mb-0">Tin Tức</h2>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="swiper-container blog-slider">
                        <div class="swiper-wrapper">
                            @foreach (var item in Model.tintucs)
                            {
                                string url = $"/tintuc/{item.TieuDe}-{item.IdTt}.html";
                                <div class="swiper-slide">
                                    <div class="blog-item">
                                        <div class="blog-img img-zoom-effect">
                                            <a href="@url">
                                                <img class="img-full" src="~/images/AnhTinTuc/@item.AnhGt" alt="@item.TieuDe">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- Add Arrows -->
                        <div class="swiper-button-next"></div>
                        <div class="swiper-button-prev"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}