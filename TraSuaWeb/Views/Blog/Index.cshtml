@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<TraSuaWeb.Models.Tintuc>
@{
    ViewData["Title"] = "Index" + ViewBag.CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";
    int PageCurent = ViewBag.CurrentPage;
    int PageNext = PageCurent + 1;
}

<!-- Begin Main Content Area -->
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="/User/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Tin tức</h2>
                        <ul>
                            <li>
                                <a href="/">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Tin tức</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="blog-area blog-column-2 section-space-y-axis-100">
        <div class="container">
            <div class="row">
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        string Url = $"/tintuc/{item.TieuDe}-{item.IdTt}.html";
                        <div class="col-md-6">
                            <div class="blog-item">
                                <div class="blog-img img-zoom-effect">
                                    <a href="@Url">
                                        <img class="img-full" src="~/images/AnhTinTuc/@item.AnhGt" alt="@item.TieuDe">
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <div class="blog-meta text-dim-gray pb-3">
                                        <ul>
                                            <li>
                                                <span class="comments me-3">
                                                    <a href="javascript:void(0)">2 Comments</a>
                                                </span>
                                                <span class="link-share">
                                                    <a href="javascript:void(0)">Share</a>
                                                </span>
                                            </li>
                                        </ul>
                                    </div>
                                    <h5 class="title mb-4">
                                        <a href="@Url">@item.TieuDe</a>
                                    </h5>
                                    <div class="button-wrap">
                                        <a class="btn btn-custom-size lg-size btn-dark rounded-0" href="@Url">Xem thêm</a>
                                    </div>
                                    <hr />
                                    <div class="fb-like" data-href="https://bom.to/Uq7yN9" data-width="" data-layout="standard" data-action="like" data-size="small" data-share="true"></div>
                                    <div id="fb-root"></div>
                                    <script async defer crossorigin="anonymous" src="https://bom.to/4SmgUx" nonce="pk0eseHv"></script>
                                </div>
                            </div>
                        </div>
                    }
                }
                <div class="col-lg-12">
                    <div class="pagination-area pt-10">
                        <ul class="pagination justify-content-center">
                            <pager class="page-container" options="@PagedListRenderOptions.Bootstrap4PageNumbersOnly" asp-area="" list="@Model"  asp-controller="Blog" asp-action="Index"></pager>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->