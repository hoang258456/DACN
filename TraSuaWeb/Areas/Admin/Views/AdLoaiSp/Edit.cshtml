@model TraSuaWeb.Models.LoaiSp

@{ ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; }
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdLoaisp" asp-action="index">Danh sách loại sản phẩm</a>
            <span class="breadcrumb-item active"> sửa Thông tin loại sản phẩm</span>
        </nav>
    </div>
</div>
<form asp-area="Admin" asp-controller="AdLoaisp" asp-action="Edit" asp-route-id="@Model.MaLoai" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="MaLoai" />
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Mã loại sản phẩm</label>
                        <input type="text" class="form-control" asp-for="MaLoai">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productPrice">Tên loại sản phẩm</label>
                        <input type="text" class="form-control" asp-for="TenLoai">
                    </div>
                    <div class="form-group">
                        <label asp-for="Anh" class="control-label">Ảnh Loại Sản Phẩm</label>
                        <input type="file" name="fAnhL" id="fAnhL" class="form-control" />
                        <span asp-validation-for="Anh" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>


