@model IEnumerable<TraSuaWeb.Models.LoaiSp>

@{ ViewData["Title"] = "Index";
                Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; }

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdLoaisp" asp-action="index">Danh sách loại sản phẩm</a>
        </nav>
    </div>
</div>
<div class="col-lg-12 text-right">
    <a class="btn btn-primary" asp-area="Admin" asp-controller="AdLoaisp" asp-action="Create"> <i class="anticon anticon-plus-circle m-r-5"></i>Thêm mới</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Tên loại sản phẩm</th>     
            <th scope="col">Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
<tr>
    <td>@item.MaLoai</td>
    <td>@item.TenLoai</td>
        
    <td>
        <a asp-area="Admin" asp-controller="AdLoaisp" asp-action="Edit" asp-route-id="@item.MaLoai" class="btn btn-info m-r-5">Sửa</a>
        <a asp-area="Admin" asp-controller="AdLoaisp" asp-action="Details" asp-route-id="@item.MaLoai" class="btn btn-warning m-r-5">Chi tiết</a>
        <a asp-area="Admin" asp-controller="AdLoaisp" asp-action="Delete" asp-route-id="@item.MaLoai" class="btn btn-danger m-r-5">Xóa</a>

    </td>
</tr>}
            }
    </tbody>
</table>