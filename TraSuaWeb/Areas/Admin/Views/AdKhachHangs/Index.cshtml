@model IEnumerable<TraSuaWeb.Models.KhachHang>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdKhachHangs" asp-action="index">Danh sách Khách Hàng</a>
        </nav>
    </div>
</div>
<div class="col-lg-12 text-right">
    <a class="btn btn-primary" asp-area="Admin" asp-controller="AdKhachHangs" asp-action="Create"> <i class="anticon anticon-plus-circle m-r-5"></i>Thêm mới</a>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tên khách hàng</th>
                <th scope="col">Email</th>
                @*<th scope="col">Password</th>*@
                <th scope="col">Số điện thoai</th>
                <th scope="col">Địa chỉ</th>
                <th scope="col">Tình trạng</th>
                <th scope="col">chức năng</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
            <tr>
                <th scope="row">@item.MaKh</th>
                <td>@item.TenKh</td>
                <td>@item.Email</td>
                @*<td>@item.Password</td>*@
                <td>@item.Sðt</td>
                <td>@item.DiaChi</td>
                <td>
                    @if (item.Tinhtrang)
                    {
                        <div class="d-flex align-items-center">
                            <div class="badge badge-success badge-dot m-r-10"></div>
                            <div>Còn</div>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <div class="badge badge-danger badge-dot m-r-10"></div>
                            <div>Hết</div>
                        </div>
                    }

                </td>
                <td>
                    <a asp-area="Admin" asp-controller="AdKhachHangs" asp-action="Edit" asp-route-id="@item.MaKh" class="btn btn-info m-r-5">Sửa</a>
                    <a asp-area="Admin" asp-controller="AdKhachHangs" asp-action="Details" asp-route-id="@item.MaKh" class="btn btn-warning m-r-5">Chi tiết</a>
                    <a asp-area="Admin" asp-controller="AdKhachHangs" asp-action="Delete" asp-route-id="@item.MaKh" class="btn btn-danger m-r-5">Xóa</a>

                </td>
            </tr>
                }
            }


        </tbody>
    </table>
</div>
