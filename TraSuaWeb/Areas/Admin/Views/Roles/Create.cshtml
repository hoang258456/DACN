@model TraSuaWeb.Models.Role

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="Roles" asp-action="index">Danh sách vai trò</a>
            <span class="breadcrumb-item active">Thêm vai trò</span>
        </nav>
    </div>
</div>
<form asp-area="Admin" asp-controller="Roles" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Mã vai trò</label>
                        <input type="text" class="form-control" asp-for="RoleId">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productPrice">Vai trò</label>
                        <input type="text" class="form-control" asp-for="RoleName">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productPrice">Mô tả</label>
                        <input type="text" class="form-control" asp-for="RoleDesciptions">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

