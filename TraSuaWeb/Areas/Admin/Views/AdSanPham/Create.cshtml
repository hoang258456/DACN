@model TraSuaWeb.Models.SanPham

@{ ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; }


<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdSanPham" asp-action="index">Quản lý sản phẩm</a>
            <span class="breadcrumb-item active">Thêm sản phẩm</span>
        </nav>
    </div>
</div>
<form asp-area="Admin" asp-controller="AdSanpham" asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-edit-basic">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productName">Tên sản phẩm</label>
                        <input type="text" class="form-control" asp-for="TenSp">
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Gía</label>
                            <input type="text" class="form-control" asp-for="Gia">
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productPrice">Giảm giá</label>
                            <input type="text" class="form-control" asp-for="GiaGiam">
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productCategory">Mã loại</label>
                            <select asp-for="MaLoai" class="custom-select" asp-items="ViewBag.MaLoai"></select>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-semibold" for="productCategory">Mã size</label>
                            <select asp-for="MaSize" class="custom-select" asp-items="ViewBag.MaSize"></select>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="AnhSp" class="control-label">Hình ảnh</label>
                        <input type="file" name="fAnhSp" id="fAnhSp" class="form-control" />
                        <span asp-validation-for="AnhSp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="font-weight-semibold" for="productStatus">Trạng thái</label>



                    
                        <div class="form-group d-flex align-items-center">

                            <div class="switch m-r-10">
                                <input type="checkbox" asp-for="TinhTrang" checked="">
                                <label for="TinhTrang"></label>
                            </div>
                            <label>Trạng thái sản phẩm     </label>
                            <div class="switch m-r-10">
                                <input type="checkbox" asp-for="XacNhanGiam" checked="">
                                <label for="XacNhanGiam"></label>
                            </div>

                            <label>     Trạng thái giảm giá     </label>
                            <br />
                            <div class="switch m-r-10">
                                <input type="checkbox" asp-for="AnHien" checked="">
                                <label for="AnHien"></label>
                            </div>
                            <label>     Trạng thái ẩn hiện</label>
                        </div>
                        @*<div class="form-group d-flex align-items-center">
                            <div class="switch m-r-10">
                                <input type="checkbox" asp-for="XacNhanGiam" checked="">
                                <label for="XacNhanGiam"></label>
                            </div>
                            <label>Trạng thái giảm giá</label>
                        </div>*@
                        @*<div class="form-group d-flex align-items-center">
                            <div class="switch m-r-10">
                                <input type="checkbox" asp-for="AnHien" checked="">
                                <label for="AnHien"></label>
                            </div>
                            <label>Trạng thái ẩn hiện</label>
                        </div>*@
                    </div>
                    <div class="form-group">
                        <input type="submit" value="lưu" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
