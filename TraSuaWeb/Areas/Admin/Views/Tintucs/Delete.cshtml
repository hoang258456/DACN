@model TraSuaWeb.Models.Tintuc

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdSanPham" asp-action="index">Danh sách sản phẩm</a>
            <span class="breadcrumb-item active">Thông tin tin tức: @Model.TieuDe</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin tin tức : @Model.TieuDe</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20 ">
                <tbody>
                    <tr>
                        <td>Tiêu Đề</td>
                        <td class="text-dark font-weight-semibold">
                            @Model.TieuDe
                        </td>
                    </tr>
                    <tr>
                        <td>Ảnh</td>
                        <td>
                            @Model.AnhGt
                        </td>
                    </tr>
                    <tr>
                        <td>Nội Dung</td>
                        <td>
                            @Html.Raw(Model.MoTa)
                        </td>
                    </tr>
                    <tr>
                        <td>Trạng thái</td>
                        <td>
                            @Model.AnHien
                        </td>
                    </tr>
                    <tr>
                        <td>Ngày tạo</td>
                        <td>
                            @Model.NgayTao
                        </td>
                    </tr>
                    <tr>
                        <td>Ngày sửa</td>
                        <td>
                            @Model.NgaySua
                        </td>
                    </tr>         
                <tr>
                    <td>Xác nhận xóa :</td>
                    <td>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="IdTt" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.IdTt">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>