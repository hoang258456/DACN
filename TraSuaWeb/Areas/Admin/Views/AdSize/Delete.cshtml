@model TraSuaWeb.Models.Size

@{ ViewData["Title"] = "Delete";
                Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; }


<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdSize" asp-action="index">Danh sách size</a>
            <span class="breadcrumb-item active">Xóa size: @Model.LoaiSize</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin sản phẩm : @Model.LoaiSize</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20 ">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">
                            @Model.MaSize
                        </td>
                    </tr>
                    <tr>
                        <td>Tên Size:</td>
                        <td>
                            @Model.LoaiSize
                        </td>
                    </tr>
                    <tr>
                        <td>Gía: </td>
                        <td>
                            @Model.Gia
                        </td>
                    </tr>                 

                    <tr>
                        <td>Xác nhận xóa :</td>
                        <td>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="MaSize" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.MaSize">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>



